{
  "name": "cdk",
  "version": "0.1.0",
  "bin": "bin/cdk.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "format-check": "rome format bin && rome format lib",
    "format": "rome format --write bin && rome format --write  lib",
    "check": "rome check bin && rome check lib",
    "check-fix": "rome check --apply-unsafe bin && rome check --apply-unsafe lib",
    "lint": "yarn format-check && yarn check",
    "lint-fix": "yarn format && yarn check-fix",
    "cdk": "cdk"
  },
  "devDependencies": {
    "@swc/core": "^1.3.60",
    "@swc/helpers": "^0.5.1",
    "@types/node": "^20.2.3",
    "aws-cdk": "^2.80.0",
    "regenerator-runtime": "0.13.11",
    "rome": "^12.1.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@aws-cdk/aws-amplify-alpha": "^2.80.0-alpha.0",
    "aws-cdk-lib": "^2.80.0",
    "constructs": "^10.2.32",
    "source-map-support": "^0.5.21"
  },
  "packageManager": "pnpm@8.5.1",
  "engines": {
    "npm": "use pnpm please!",
    "yarn": "use pnpm please!",
    "pnpm": ">=8.5.1"
  }
}
